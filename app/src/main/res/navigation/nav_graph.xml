<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cortlandwalker.shortoftheweek.features.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_filmDetailFragment"
            app:destination="@id/filmDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.cortlandwalker.shortoftheweek.features.news.NewsFragment"
        android:label="News">
        <action
            android:id="@+id/action_newsFragment_to_filmDetailFragment"
            app:destination="@id/filmDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.cortlandwalker.shortoftheweek.features.search.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_filmDetailFragment"
            app:destination="@id/filmDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/filmDetailFragment"
        android:name="com.cortlandwalker.shortoftheweek.features.detail.FilmDetailFragment"
        android:label="Film Detail">
        <argument
            android:name="filmId"
            app:argType="integer" />
    </fragment>

</navigation>
